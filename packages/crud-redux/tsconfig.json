{
  "compilerOptions": {
    "target": "es2020",
    "module": "es2020",
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "sourceMap": false,
    "outDir": "lib/types",
    "strict": true,
    "lib": [
      "esnext",
      "dom"
    ],
    "esModuleInterop": false,
    "resolveJsonModule": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "skipLibCheck": true,
    "downlevelIteration": true,
    "isolatedModules": true,
    "types": [
      "node",
      "mocha"
    ],
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "src"
  ],
  "exclude": []
}

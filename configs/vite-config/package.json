{
    "name": "@owlprotocol/vite-config",
    "private": true,
    "version": "1.2.0",
    "types": "./dist/index.d.ts",
    "main": "./lib/index.cjs",
    "module": "./lib/index.mjs",
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "import": "./lib/index.mjs",
            "require": "./lib/index.cjs"
        }
    },
    "files": [
        "src",
        "dist",
        "lib",
        "LICENSE",
        "README.md"
    ],
    "scripts": {
        "build": "npm-run-all -p tsc esbuild",
        "build:watch": "npm-run-all -p tsc:watch esbuild:watch",
        "esbuild": "node esbuild.config.mjs",
        "esbuild:watch": "ESBUILD_WATCH=true node esbuild.config.mjs",
        "tsc": "tsc",
        "tsc:watch": "tsc -w"
    },
    "devDependencies": {
        "@esbuild-plugins/node-globals-polyfill": "^0.1.1",
        "@esbuild-plugins/node-modules-polyfill": "^0.1.4",
        "@rollup/plugin-alias": "^3.1.9",
        "@rollup/plugin-commonjs": "^22.0.0",
        "@rollup/plugin-inject": "^4.0.4",
        "@vitejs/plugin-react": "^1.0.7",
        "esbuild": "^0.14.25",
        "rollup": "^2.72.1",
        "rollup-plugin-node-polyfills": "^0.2.1",
        "typescript": "^4.8.3",
        "vite": "3.0.2",
        "vite-dts": "workspace:*",
        "vite-plugin-checker": "^0.4.2",
        "vite-plugin-environment": "^1.1.1",
        "vite-plugin-svgr": "^2.1.0",
        "@owlprotocol/esbuild-config": "workspace:*",
        "@types/node": "^17.0.45",
        "npm-run-all": "^4.1.5"
    }
}
